<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Pantry</title>
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>
  <h1>Welcome to my Pantry</h1>

  <form action="/users/<%= user._id %>/foods" method="POST">
    <label for="name">Food Name:</label>
    <input type="text" id="name" name="name" required>

    <label for="quantity">Quantity:</label>
    <input type="number" id="quantity" name="quantity" required>

    <label for="expiryDate">Expiry Date:</label>
    <input type="date" id="expiryDate" name="expiryDate" required>

    <button type="submit">Add to Pantry</button>
  </form>

  <h2>Your Pantry Items</h2>
  <% if (pantry.length > 0) { %>
    <ul>
      <% pantry.forEach(item => { %>
        <li>
          <%= item.name %> - <%= item.quantity %> - <%= new Date(item.expiryDate).toDateString() %>
          <form action="/users/<%= user._id %>/foods/<%= item._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>There are no items in this pantry.</p>
  <% } %>
</body>
</html>
